<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="pos_stock_where.WhereSection" owl="1">
    <section class="o_pos_product_info_where mt-2">
      <h4>Stock por disponible</h4>
            <!-- OJO: '&&' debe ir escapado -->
      <t t-if="component.whereState.rows &amp;&amp; component.whereState.rows.length">
        <ul class="list-unstyled mb-0">
          <t t-foreach="component.whereState.rows" t-as="r" t-key="r.location_id">
            <li>
              <t t-out="r.complete_name"/>:
              <t t-out="(r.qty || 0).toFixed(2)"/>
            </li>
          </t>
        </ul>
      </t>
      <t t-else=""><em>¡Sin stock en ningún almacén.!</em></t>
    </section>
  </t>

  <t t-extend="point_of_sale.ProductInfoPopup" owl="1">
    <t t-jquery="main.body" t-operation="append">
      <span id="pos_where_debug_marker">pos_where_loaded</span>
      <t t-call="pos_stock_where.WhereSection"/>
    </t>
  </t>

</templates>
